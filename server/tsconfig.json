{
    "compilerOptions": {
        "target": "ES5",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "types": ["node", "jest"],
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        // "strict": true,
        // "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js"]
}
